### cwmrc

## misc
borderwidth 2
fontname "terminus:pixelsize=14"
moveamount 2
snapdist 10
sticky yes
gap 16 0 0 0
autogroup 0 mixer

## colors

# menu
color font	gray80
color menubg	gray28
color menufg	gray10
color selfont	gray100

# windows
color activeborder	gray28
color inactiveborder	gray10
color urgencyborder	yellow
color groupborder	blue

# commands
command lock		lock
command term		urxvtcd
command browser		firefox
command emacs		emacs
command xkill		xkill

## bindings

# general
bind C4M-r	restart
bind 4-Return	urxvtcd
bind 4-space	menu
bind C4M-w	exec WindowManager
bind 4-period	ssh

bind XF86AudioRaiseVolume "mixer vol +10"
bind XF86AudioLowerVolume "mixer vol -10"

# groups
bind 4-1	grouponly1
bind 4-2	grouponly2
bind 4-3	grouponly3
bind 4-4	grouponly4

bind S4-0	grouptoggle
bind S4-1	movetogroup1
bind S4-2	movetogroup2
bind S4-3	movetogroup3
bind S4-4	movetogroup4

bind C4-0	nogroup
bind C4-1	group1
bind C4-2	group2
bind C4-3	group3
bind C4-4	group4

bind 4-XF86Forward	cyclegroup
bind 4-XF86Back		rcyclegroup
bind M-Tab		cycleingroup
bind MS-Tab		rcycleingroup

# current window
bind 4-F11	fullscreen
bind S4-F11	maximize
bind 4-r	label
bind 4-s	search

bind 4-q	delete
bind 4-m	hide
bind 4-z	lower
bind 4-x	raise
bind 4-equal	vmaximize
bind S4-equal	hmaximize
bind 4-slash	vtile
bind S4-slash	htile

bind 4-h	moveleft
bind 4-j	movedown
bind 4-k	moveup
bind 4-l	moveright

bind 4S-h	bigmoveleft
bind 4S-j	bigmovedown
bind 4S-k	bigmoveup
bind 4S-l	bigmoveright

bind M4-h	resizeleft
bind M4-j	resizedown
bind M4-k	resizeup
bind M4-l	resizeright
bind SM4-h	bigresizeleft
bind SM4-j	bigresizedown
bind SM4-k	bigresizeup
bind SM4-l	bigresizeright

# mouse
mousebind M-1  window_move
mousebind M-3  window_resize

